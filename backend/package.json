{
  "name": "uptime-checker-backend",
  "version": "1.0.0",
  "description": "Backend for Website Uptime Checker",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "redis-server --daemonize yes && sleep 2 && nodemon src/server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest --detectOpenHandles",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest --watch",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest tests/integration --detectOpenHandles",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest tests/unit",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest --coverage"
  },
  "keywords": [
    "uptime",
    "monitoring",
    "alerts"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.69.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.22.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.9.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.23.0",
    "nodemailer": "^7.0.13",
    "ocsp": "^1.2.0",
    "ping": "^0.4.4",
    "socket.io": "^4.8.3",
    "undici": "^7.22.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "fast-check": "^4.4.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.2.2"
  }
}
