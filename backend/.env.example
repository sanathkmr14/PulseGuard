# Server Configuration
PORT=5000
# Concurrency: 0 = auto-detect based on CPU
WORKER_CONCURRENCY=0
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/uptime-checker

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (SMTP)
# You can use a full SMTP URL or individual host/port credentials.
# Example Mailtrap sandbox (safe for development):
# SMTP_URL=smtps://43aab79bd13eb5:4a563034a54571@smtp.mailtrap.io:465
# Or set individual values below (Mailtrap sandbox commonly uses port 2525):
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=43aab79bd13eb5
EMAIL_PASSWORD=4a563034a54571
EMAIL_FROM="Website Checker <no-reply@example.com>"

# Optional email settings
# Enable pooling for higher throughput: EMAIL_POOL=true
# Max pool connections: EMAIL_MAX_CONNECTIONS=5
# Connection/greeting/socket timeouts (ms):
# EMAIL_CONN_TIMEOUT=10000
# EMAIL_GREETING_TIMEOUT=10000
# EMAIL_SOCKET_TIMEOUT=120000
# If you're testing with self-signed certs in dev, set to false; in prod leave unset/true
# EMAIL_TLS_REJECT_UNAUTHORIZED=false

# Slack Integration (Optional)
SLACK_WEBHOOK_URL=

# Twilio SMS (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Monitoring Settings
DEFAULT_CHECK_INTERVAL=5
DEFAULT_TIMEOUT=30000
MAX_RETRIES=3
