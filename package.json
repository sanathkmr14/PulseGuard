{
  "name": "project",
  "version": "1.0.0",
  "description": "",
  "main": "backend/src/test/comprehensive-protocol-test-suite.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "npm run dev:backend & npm run dev:frontend",
    "dev:backend": "cd backend && nodemon src/server.js",
    "dev:frontend": "cd frontend && vite",
    "build": "cd frontend && npm run build",
    "test:unit": "jest",
    "test:e2e": "cd backend && node tests/integration/alert-service-e2e.js",
    "test:protocol": "cd backend && node tests/unit/monitor.comprehensive.test.js",
    "test:all": "npm run test:e2e && npm run test:protocol",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:all": "npm run install:backend && npm run install:frontend"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  }
}
